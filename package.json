{
  "name": "Kathinka-bot",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git@github.com:scriptcie/kathinka-bot.git"
  },
  "devDependencies": {
    "browserify": "~11.2",
    "eslint": "~1.3.1",
    "gulp": "~3.9",
    "gulp-mocha": "~2.1",
    "gulp-util": "~3.0.5",
    "mocha": "~2.3",
    "should": "~4.0.4",
    "sinon": "~1.17",
    "stryker": "^0.4.1",
    "stryker-api": "^0.2.0",
    "stryker-html-reporter": "^0.2.0",
    "stryker-mocha-runner": "^0.1.0"
  },
  "dependencies": {
    "github": "^0.2.4",
    "irc": ">=0.3.12",
    "istanbul": "^0.4.4",
    "languagedetect": "~1.1.1",
    "nconf": "^0.8.2",
    "steam": "~1.1.0",
    "telegram-bot-api": ">=0.3.2"
  },
  "scripts": {
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha test/{**/,/}*.js  -- --require should -R spec",
    "precoveralls": "istanbul cover node_modules/mocha/bin/_mocha test/{**/,/}*.js  --report lcovonly -- --require should -R spec && npm i coveralls@2",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint src/ test/ Bootstrap/",
    "test": "npm run lint && npm run mocha",
    "mocha": "mocha --recursive ",
    "stryker": "stryker -c stryker.conf.js",
    "watch": "mocha --watch --recursive --require should"
  }
}
